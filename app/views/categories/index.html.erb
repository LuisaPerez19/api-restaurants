<div class="container">
  <h1>Categories</h1>
  <br>
  <div class="row justify-content-left align-items-baseline">
    <div class="col-3">
      <div class ="card rounded p-4">

        <%= form_with url: "/search", method: :get, id:"searchForm" do |form| %>
        <p class="mb-1 fw-bold">👩‍🍳 Cuisine</p>
          <% @categories.each_with_index do |category, index| %>
            <div class="form-check mb-1">
              <%= form.radio_button :category, category.name, id: "category#{index + 1}", class: "form-check-input"%>
              <%= form.label "category#{index + 1}", category.name, class: "form-check-label" %>
            </div>
          <% end %>

          <div class="my-4">
            <%= form.label :location, "📍 Location (optional!)", class: "form-label mb-1 fw-bold" %>
            <%= form.text_field :location, class: "form-control", placeholder: "Roma" %>
          </div>

        <%= form.submit "Search", class: "btn btn-primary mt-3", id: "submitBtn" %>
        <% end %>

      </div>
    </div>
  </div>
</div>
